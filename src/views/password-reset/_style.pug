style.
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  input {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 12px 20px;
    width: 100%;
    box-sizing: border-box;
    margin-top: 6px;
    margin-bottom: 16px;
  }
  .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 30vw;
  }
  .btn {
    background-color: #4caf50;
    border: none;
    color: white;
    padding: 12px 20px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 20px;
  }